<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/bm_tab_layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/wallpaper_tab_layout"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:saveEnabled="false">

            <TextView
                android:id="@+id/wallpaper_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bm_wallpaper_title"
                android:textColor="@color/bm_tab_text_selected"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/theme_tab_layout"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:saveEnabled="false">

            <TextView
                android:id="@+id/theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bm_theme_title"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/font_tab_layout"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:saveEnabled="false">

            <TextView
                android:id="@+id/font_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bm_font_title"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/local_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/local_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@null"
                android:src="@drawable/mh_icon_local" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/tab_indicator"
        android:layout_width="48dp"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="@color/bm_tab_text_selected"
        android:contentDescription="@null" />


</FrameLayout>