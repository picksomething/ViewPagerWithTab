<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Beautify Main 可以缩写为bm-->

    <!-- color fields -->
    <color name="beautifyColorAccent">#FF00ADE9</color>
    <color name="beautifyWhiteBackground">#FFFFFFFF</color>

    <!-- dimen fields -->
    <dimen name="bm_tab_max_width">144dp</dimen>
    <dimen name="bm_tab_height">56dp</dimen>


    <!--style fields-->
    <style name="ThemeOfBeautifyBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/beautifyWhiteBackground</item>
    </style>

    <style name="BeautifyMainTheme" parent="ThemeOfBeautifyBase">
        <item name="colorAccent">@color/beautifyColorAccent</item>
    </style>

    <style name="CustomTabLayoutTheme">
        <item name="tabIndicatorColor">@color/beautifyColorAccent</item>
        <item name="tabMaxWidth">@dimen/bm_tab_max_width</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/bm_tab_text_selected</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bm_tab_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- color fields -->
    <color name="bm_tab_layout_bg">#FFFFFFFF</color>
    <color name="bm_tab_text">#DE000000</color>
    <color name="bm_tab_text_selected">#FF00ADE9</color>

    <!-- string fields -->
    <string name="bm_wallpaper_title">壁纸</string>
    <string name="bm_theme_title">主题</string>
    <string name="bm_font_title">字体</string>
</resources>